{
  "compileOnSave": true,
  "include": [
    "**/*"
  ],
  "exclude": [
    "buildOutput",
    "coverage",
    "deploy",
    "node_modules",
    "gulpfile.js"
  ],
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": false,
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6",
      "es2015.promise"
    ],
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "chai",
      "mocha",
      "node",
      "sinon"
    ]
  }
}